!!! Strict
%html{"xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}

    %title Frypan, we make your bacn hot

    %link{:href => path_to_stylesheet("reset"), :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %link{:href => path_to_stylesheet("typography"), :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %link{:href => path_to_stylesheet("forms"), :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %link{:href => path_to_stylesheet("wireframe"), :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %link{:href => path_to_stylesheet("polypage"), :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %link{:href => path_to_stylesheet("frypan"), :media => "screen", :rel => "stylesheet", :type => "text/css"}

    %script{:src => path_to_javascript("jquery.min"), :type => "text/javascript"}
    %script{:src => path_to_javascript("cookie.jquery"), :type => "text/javascript"}
    %script{:src => path_to_javascript("polypage.jquery"), :type => "text/javascript"}
    %script{:src => path_to_javascript("frypan"), :type => "text/javascript"}
    %script{:type=>"text/javascript"}
      $(document).ready(function() {
      - if @pp_initial_page_state
        == $("body").polypage([ "#{@pp_initial_page_state}" ]);
      - else
        == $("body").polypage();
      });
    
  %body{:class => @body_class}
    .container{:class => ''}
      .header
        = partial :header
      .content
        = yield
      .footer
        = partial :footer
